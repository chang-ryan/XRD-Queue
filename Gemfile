source 'https://rubygems.org'

gem 'rails'
gem 'uglifier',     '>= 1.3.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder',     '~> 2.0'
gem 'sdoc',         '~> 0.4.0', group: :doc
gem 'bcrypt'
gem 'pg'
gem 'faker'
gem 'will_paginate'

group :development, :test do
  gem 'byebug'
  gem 'web-console',        "~> 2.0"
  gem 'rspec'
  gem "rspec-rails"
  gem "factory_girl_rails", "~> 4.0"
  gem "capybara"
  gem "database_cleaner"
  gem "selenium-webdriver"
end

group :production do
  gem 'rails_12factor'
  gem 'puma'
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

# Front End Stuff
gem 'bower-rails'
gem 'sass'
gem 'bourbon',      '4.2.6'
gem 'neat'
gem 'bitters'
