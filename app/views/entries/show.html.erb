<section>
  <h1>Details for <%= @entry.sample %></h1>
  <div class="box">
    <h3>Charge Number</h3>
    <p><%= @entry.charge %></p>
  </div>
  <div class="box">
    <h3>Need By</h3>
    <p><%= @entry.need_by %></p>
  </div>
  <div class="box">
    <h3>File Format</h3>
    <p><%= @entry.file_format %></p>
  </div>
  <div class="box">
    <h3>Scan Type</h3>
    <p><%= @entry.scan_type %></p>
  </div>
  <div class="box_1-2">
    <h3>Sample Description</h3>
    <p><%= @entry.description %></p>
  </div>
  <div class="box">
    <h3>Scan Conditions</h3>
    <p><%= @entry.description %></p>
  </div>
  <div class="box_1-2">
    <h3>Special Instructions</h3>
    <p><%= @entry.special_instructions %></p>
  </div>
</section>
<section>
  <div class="controls">
    <%= link_to "Back", url_for(:back), { :class => "btn" } %>
    <%= link_to "Edit", edit_entry_path(@entry), { :class => "btn"} %>
  </div>
</section>
