<!-- /views/static_pages/usage_stats.html.erb -->

<% provide(:title, "Usage Statistics") %>

<% content_for :section do %>
  <table>
    <thead>
      <tr>
        <th>Charge Number</th>
        <th>Percent Used</th>
        <th>Entries Submitted</th>
      </tr>
    </thead>

    <tbody>
      <% @usage.each do |k,v| %>
      <tr>
        <td><%= k %></td>
        <td><%= v["percent"] %></td>
        <td><%= v["total"] %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= render template: 'static_pages/admin_panel' %>
