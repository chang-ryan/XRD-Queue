<!-- /views/users/index.html.erb -->

<% provide(:title, "Users Controller") %>

<% content_for :section do %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Department</th>
        <th>Scans in Queue</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.department %></td>
        <td><%= user.entries.where(scanned: false).count %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= render template: 'static_pages/admin_panel' %>
